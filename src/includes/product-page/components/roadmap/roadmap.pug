    var roadmapCards = [
        {
            year: '2021',
            plans: [
                {
                    name: 'Complete',
                    text: 'Celo Grant',
                },
            ],
        },
        {
            year: '2022',
            plans: [
                {
                    name: 'In Progress',
                    text: 'Seed Funding',
                },
                {
                    name: 'In Progress',
                    text: 'Valora Wallet Integration',
                },
                {
